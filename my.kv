#:import mykivy __main__
WindowManager:
    SecondWindow:

<SecondWindow>:
    name: "second"
    GridLayout:
        cols:1
        GridLayout:
        GridLayout:
            cols: 2
            GridLayout:
                cols: 3
                Button:
                    text: "<="
                    on_release:
                        mykivy.buttonEvents('<=')
                Button:
                    text: "Pause/Play"
                    on_release:
                        mykivy.buttonEvents('play/pause')

                Button:
                    text: "=>"
                    on_release:
                        mykivy.buttonEvents('=>')

        GridLayout:
            cols: 2
            GridLayout:
                cols: 2
                Button:
                    text: "Left"
                    on_release:
                        mykivy.buttonEvents('left')
                Button:
                    text: "Right"
                    on_release:
                        mykivy.buttonEvents('right')
        GridLayout:
            cols: 2
            GridLayout:
                cols: 2
                Button:
                    text: "Exit"
                    on_release:
                        mykivy.buttonEvents('exit')
                Button:
                    text: "Enter"
                    on_release:
                        mykivy.buttonEvents('enter')

        GridLayout:
            cols: 2
            GridLayout:
                cols: 2
                Button:
                    text: "-"
                    on_release:
                        mykivy.buttonEvents('-')
                Button:
                    text: "+"
                    on_release:
                        mykivy.buttonEvents('+')
            Button:
                text: "Space"
                on_release:
                    mykivy.buttonEvents('space')
        GridLayout:
        GridLayout:
            cols: 2
            GridLayout:
                cols: 3
                GridLayout:
                Button:
                    text: "Shutdown"
                    on_release:
                        mykivy.buttonEvents('shutdown')
                GridLayout:
        GridLayout
